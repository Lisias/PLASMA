def hgrBLT(page, x, y, w, h, pSrc)#0
    word pDst
    byte i

    repeat
        pDst = hgrscan[y] | page + x
        for i = 0 to w - 1
            pDst->[i] = pSrc->[i]
        next
        pSrc = pSrc + w
        y++
        h--
    until not h
end
